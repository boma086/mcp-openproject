# Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# OpenProject Configuration
# =============================================================================
# OpenProject API endpoint URL
OPENPROJECT_BASE_URL=http://localhost:8090/

# OpenProject API key (provided for local development)
OPENPROJECT_API_KEY==your-encryption-key-here

# =============================================================================
# Security Configuration
# =============================================================================
# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-encryption-key-here

# JWT secret key for authentication (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-jwt-secret-key-here

# =============================================================================
# MCP Server Configuration
# =============================================================================
# MCP server host
MCP_HOST=0.0.0.0

# MCP server port
MCP_PORT=8000

# MCP server debug mode
MCP_DEBUG=false

# MCP interaction mode (stdio, http, sse)
MCP_INTERACTION_MODE=http

# =============================================================================
# Database Configuration (Production)
# =============================================================================
# PostgreSQL database URL
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/mcp_db

# Redis cache URL
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI Website Integration Configuration
# =============================================================================
# AI website backend URL
AI_WEBSITE_BACKEND_URL=http://localhost:3000

# OpenAI API key for AI website features
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Development Configuration
# =============================================================================
# Development mode flag
DEVELOPMENT_MODE=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable hot reload in development
HOT_RELOAD=true

# =============================================================================
# Monitoring and Observability
# =============================================================================
# Enable Prometheus metrics
ENABLE_METRICS=true

# Metrics port
METRICS_PORT=9090

# Enable structured logging
STRUCTURED_LOGGING=true

# =============================================================================
# Security Settings
# =============================================================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting requests per minute
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=30

# =============================================================================
# Performance Settings
# =============================================================================
# HTTP client timeout in seconds
HTTP_CLIENT_TIMEOUT=30

# Maximum connection pool size
MAX_CONNECTION_POOL_SIZE=20

# Cache TTL in seconds
CACHE_TTL=3600

# =============================================================================
# Feature Flags
# =============================================================================
# Enable OAuth authentication
ENABLE_OAUTH=false

# Enable JWT authentication
ENABLE_JWT=true

# Enable API key authentication
ENABLE_API_KEY=true

# Enable caching
ENABLE_CACHE=true

# Enable monitoring
ENABLE_MONITORING=true